<% include ../partials/header.ejs %>
<div class="container">
    <div class="row new-form" style=>
        <h1>Add a comment to <%= campground.name %></h1>
        <div class="new-post">
            <form action="/campgrounds/<%= campground._id %>/comment" method="post">
                <div class="form-group">
<!--                    <input type="text" class="form-control" name="text" placeholder="comment">-->
                    <textarea class="form-control" name="text" cols="30" rows="10" placeholder="add your comment"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back !</a>
        </div>
    </div>

</div>

