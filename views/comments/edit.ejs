<% include ../partials/header.ejs %>
<div class="container">
    <div class="row" style="display: contents">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 0 auto">
            <form action="/campgrounds/<%= campground_id %>/comment/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <!--                    <input type="text" class="form-control" name="text" placeholder="comment">-->
                    <textarea class="form-control" name="text" cols="30" rows="10"> <%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back !</a>
        </div>
    </div>
</div>

