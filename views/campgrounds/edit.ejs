<% include ../partials/header.ejs %>
<div class="container">
    <div class="row" style="display: contents">
        <h1 style="text-align: center">Edit your campground information</h1>
        <div style="width: 30%; margin: 0 auto">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" value="<%= campground.price %>" min="0.00" step="5.00">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back !</a>
        </div>
    </div>

</div>

<% include ../partials/footer.ejs %>