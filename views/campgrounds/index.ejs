<% include ../partials/header.ejs %>
<div class="container">
    <header>
        <div class="container">
            <div class="jumbotron">
                <h1>Check the recommended campgrounds !</h1>
                <p>Enjoy the camp here !</p>
                <a class="btn btn-primary" href="/campgrounds/new" role="button">Add the new camp here!</a>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row camp-list">
            <% campsites.forEach(function (campsite) { %>
                <div class="col-lg-3 col-sm-6">
                    <div class="thumbnails text-center">
                        <img src="<%= campsite.image %>">
                        <h4><%= campsite.name %></h4>
                        <a href="/campgrounds/<%= campsite._id %>" class="btn btn-primary info">More Info</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>


</div>


<% include ../partials/footer.ejs %>